<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMTodo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey</item>
        <!-- Customize your theme here. -->
        <!-- Snackbar     -->
        <item name="snackbarStyle">@style/snackbar_style</item>
        <item name="snackbarTextViewStyle">@id/snackbar_text</item>
        <item name="snackbarButtonStyle">@style/snackbar_button</item>
    </style>

<!-- Snackbar Styles   -->
    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="actionTextColorAlpha">1</item>
    </style>
    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">7dp</item>
    </style>

<!-- Colors   -->
</resources>